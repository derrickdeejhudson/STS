<Window x:Class="XNASpriteFontCreator.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="XNA Sprite Font Creator" Height="300" Width="300" Loaded="Window_Loaded">
    <Grid>
        <TabControl Name="tabControl1">
            <TabItem Header="Simple Controls" Name="tabItem1">
                <Grid>
                    <Label Margin="6,6,0,0" Name="label1" VerticalAlignment="Top" HorizontalAlignment="Left" Height="25.96" Width="36.347">Font:</Label>
                    <ComboBox Height="23" Margin="48,6,7,0" Name="comboBox1" VerticalAlignment="Top" SelectedIndex="0" SelectionChanged="comboBox1_SelectionChanged" />
                    <Label HorizontalAlignment="Left" Margin="6,38,0,0" Name="label2" VerticalAlignment="Top" Height="25.96" Width="33.583">Size:</Label>
                    <TextBox Height="23" Margin="46,40.96,7,0" Name="textBox1" VerticalAlignment="Top" TextChanged="textBox1_TextChanged">14</TextBox>
                    <CheckBox Margin="6,70,0,0" Name="checkBox1" VerticalAlignment="Top" Height="15.96" HorizontalAlignment="Left" Width="120">Bold</CheckBox>
                    <CheckBox Margin="132,70,16,0" Name="checkBox2" Height="16.08" VerticalAlignment="Top">Italic</CheckBox>
                    <Button Height="23" Margin="6,0,6,6" Name="button1" VerticalAlignment="Bottom" Click="button1_Click">Create Sprite Font</Button>
                    <Label Margin="6,92,7,35" Name="label5" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">Preview</Label>
                </Grid>
            </TabItem>
            <TabItem Header="Advanced Controls" Name="tabItem2">
                <Grid>
                    <Label Margin="6,6,0,0" Name="label3" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25.96" Width="108.393">Character Spacing:</Label>
                    <TextBox Height="23" Margin="120,8.96,6,0" Name="textBox2" VerticalAlignment="Top">0</TextBox>
                    <Label Margin="6,38,0,0" Name="label4" VerticalAlignment="Top" HorizontalAlignment="Left">Use Kerning:</Label>
                    <ComboBox Height="23" Margin="88,40.88,0,0" Name="comboBox2" VerticalAlignment="Top" HorizontalAlignment="Left" Width="174" SelectedIndex="0">
                        <ComboBoxItem>True</ComboBoxItem>
                        <ComboBoxItem>False</ComboBoxItem>
                    </ComboBox>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
